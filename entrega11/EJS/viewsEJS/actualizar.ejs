<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EJS/Actualizar</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/header.ejs') %>
    <main>
        <% if (listExists) { %>
        <div class="tablaPadding">
            <table class="tabla">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Foto URL</th>
                </tr>
                <% productos.forEach(function(prod) { %>
                <tr>
                    <th><%= prod.id %></th>
                    <th><%= prod.title %></th>
                    <th><%= prod.price %></th>
                    <th><img class="tablaImagen" src="<%= prod.thumbnail %>" alt="Foto de producto"></th>
                </tr>
                <% }) %>
            </table>
        </div>
        <% } else{ %>
        <div class="formNoHayProductos">
            <%= productos.error %>
        </div>
        <% } %>
        <form class="formulario" method="get" action="http://localhost:8080/ejs/actualizarTest">
            <h1>Actualice el producto<br>por ID</h1> <br>
            <h3>ID</h3>
            <input type="text" name="id" placeholder="escriba aqui">
            <h3>Nombre</h3>
            <input type="text" name="title">
            <h3>Precio</h3>
            <input type="text" name="price">
            <h3>Foto URL</h3>
            <input type="text" name="thumbnail">
            <br>
            <br>
            <input type="submit" class="formEnviar" value="Enviar">
        </form>
    </main>
    <%- include('partials/footer.ejs') %>
</body>
</html>